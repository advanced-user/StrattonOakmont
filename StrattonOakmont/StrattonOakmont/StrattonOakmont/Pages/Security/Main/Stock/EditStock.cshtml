@page
@model StrattonOakmont.Pages.Security.Main.Stock.EditStockModel

@{
    ViewData["Title"] = "Edit stock";
}

<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
        data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full"> 

    <div class="container-fluid">
        <div class="row mt-3">
            <div class="card">
                <h2 style="text-align:center; margin:10px">Editing a stock for @Model.Company.Name</h2><br />
                <div class="card-body">
                    <form class="form-horizontal form-material mx-2" method="post">
                        <input asp-for="@Model.Stock.Id" value="@Model.Stock.Id" style="display:none;" />
                        <input asp-for="@Model.Company.Id" value="@Model.Company.Id" style="display:none;" />
                        @{
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Price: @Model.PriceСhange.Price</label>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Volume</label>
                                <div class="col-md-12">
                                    <input asp-for="@Model.PriceСhange.Volume" type="text" value="@Model.PriceСhange.Volume"
                                            class="form-control ps-0 form-control-line">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Amount</label>
                                <div class="col-md-12">
                                    <input asp-for="@Model.PriceСhange.Amount" type="text" value="@Model.PriceСhange.Amount"
                                            class="form-control ps-0 form-control-line">
                                </div>
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-sm-12 d-flex">
                                <button class="btn btn-success mx-auto mx-md-0 text-white">
                                    Update
                                    Stock
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>