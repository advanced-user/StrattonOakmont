@page
@model StrattonOakmont.Pages.Account.Roles.IndexModel
@{
}
 
<h2>Список ролей</h2>
<table class="table">
    @foreach (var role in @Model.Roles)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-page="Add">Добавить роль</a>
<a asp-page="User">Список пользователей</a>