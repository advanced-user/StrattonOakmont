@page
@using Microsoft.AspNetCore.Identity
@model StrattonOakmont.Pages.AdminArea.ProfileModel
@{
}
<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
        data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full"> 
           
        <div class="container-fluid">
            <div class="row">
                <!-- Column -->
                <div class="col-lg-4 col-xlg-3 col-md-5">
                    <div class="card">
                        <div class="card-body profile-card">
                            <center class="mt-4">
                                <img src="@Model.UserModel.Img"
                                        class="rounded-circle" width="150" />
                                <h4 class="card-title mt-2">@Model.UserModel.UserName</h4>
                                <h6 class="card-subtitle">@Model.UserModel.Email</h6>
                            </center>
                        </div>
                        <h2 style="text-align:center; margin:10px">Изменение ролей для пользователя @Model.UserModel.UserName</h2><br />

                         <div class="card-body">
                        @{
                            if(Model.AllRoles != null)
                            {
                                foreach (IdentityRole role in Model.AllRoles)
                                {
                                    <div class="col-md-12">
                                        <input type="checkbox" name="roles" value="@role.Name"
                                                @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
                                    </div>
                                }

                            }
                        }
                            
                        </div>
                    </div>

                </div>
                <div class="col-lg-8 col-xlg-9 col-md-7">
                    <div class="card">
                        <div class="card-body">
                            <form class="form-horizontal form-material mx-2" method="post">

                                <div class="form-group">
                                    <label class="col-md-12 mb-0">UserName</label>
                                    <div class="col-md-12">
                                        <input asp-for="@Model.UserModel.UserName" type="text" value="@Model.UserModel.UserName"
                                                class="form-control ps-0 form-control-line">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="example-email" class="col-md-12">Email</label>
                                    <div class="col-md-12">
                                        <input asp-for="@Model.UserModel.Email" type="email" value="@Model.UserModel.Email"
                                                class="form-control ps-0 form-control-line" name="example-email"
                                                id="example-email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-12 mb-0">Age</label>
                                    <div class="col-md-12">
                                        <input asp-for="@Model.UserModel.Year" value="@Model.UserModel.Year"
                                                class="form-control ps-0 form-control-line">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-12 mb-0">Img</label>
                                    <div class="col-md-12">
                                        <input asp-for="@Model.UserModel.Img" type="text" value="@Model.UserModel.Img"
                                                class="form-control ps-0 form-control-line">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12 d-flex">
                                        <button class="btn btn-success mx-auto mx-md-0 text-white">
                                            Update
                                            Profile
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>


