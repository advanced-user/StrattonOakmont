@page
@model StrattonOakmont.Pages.Security.Main.Bond.ChangeInBondPricesModel
@{
     ViewData["Title"] = "ChangeInBondPrices";
}

<div class="container-fluid">
    <div class="row">
        <!-- column -->
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Change in bond prices for @Model.Company.Name</h4>
                    <h6 class="card-subtitle"> <code></code></h6>
                    <div class="table-responsive">
                        <table class="table user-table">
                            <thead>
                                <tr>
                                    <th class="border-top-0">Price</th>
                                    <th class="border-top-0">Volume</th>
                                    <th class="border-top-0">Amount</th>
                                    <th class="border-top-0">Date</th>
                                    <th class="border-top-0"></th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.Bond != null && Model.Bond.PriceСhanges != null)
                                {
                                    @foreach (var priceChange in Model.Bond.PriceСhanges)
                                    {
                                        <tr>
                                            <td>@priceChange.Price</td>
                                            <td>@priceChange.Volume</td>
                                            <td>@priceChange.Amount</td>
                                            <td>@priceChange.Date</td>
                                            <td style="display: flex; justify-content: flex-end">
                                                <a class="btn btn-primary" style="margin:5px" asp-page="/Security/PriceChange/Bond/EditInBondPriceChange"
                                                                                        asp-route-companyId="@Model.Company.Id"
                                                                                        asp-route-priceChangeId="@priceChange.Id">Edit</a>  

                                                <a asp-page="/Security/PriceChange/Bond/DeleteInBondPriceChange"
                                                    asp-route-companyId="@Model.Company.Id"
                                                    asp-route-priceChangeId="@priceChange.Id"
                                                    class="btn btn-danger" style="margin:5px">Delete</a> 
                                            </td>
                                        </tr>
                                    }
                                }
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
