@page
@model StrattonOakmont.Pages.Security.Main.Abligation.AddAbligationModel

@{
    ViewData["Title"] = "Add abligation";
}

<div class="card">
    <h2 style="text-align:center; margin:10px">Add new abligation for @Model.Company.Name</h2><br />

    <div class="card-body">
        <form class="form-horizontal form-material mx-2" method="post">
            <input asp-for="@Model.Company.Id" value="@Model.Company.Id" style="display:none;" />
            <input asp-for="@Model.CategoryId" value="@Model.CategoryId" style="display:none;" />
            
            <div class="form-group">
                <label asp-for="@Model.Abligation.Percent" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Abligation.Percent" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Abligation.FinalTime" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Abligation.FinalTime" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Abligation.Volume" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Abligation.Volume" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Abligation.Amount" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Abligation.Amount" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Date.Year" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Date.Year" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Date.Month" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Date.Month" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Date.Day" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Date.Day" class="form-control ps-0 form-control-line">
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-12 d-flex">
                    <button type="submit" class="btn btn-success mx-auto mx-md-0 text-white">
                        Add
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
