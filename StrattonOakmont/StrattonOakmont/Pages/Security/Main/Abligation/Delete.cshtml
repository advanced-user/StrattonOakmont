@page
@model StrattonOakmont.Pages.Security.Main.Abligation.DeleteModel
@{
}

<div class="card">
    <h2 style="text-align:center; margin:10px">Confirm the deletion of the bond for @Model.Company.Name</h2><br />
    <div class="card-body">
        <form class="form-horizontal form-material mx-2" method="post">
            <input asp-for="@Model.Company.Id" value="@Model.Company.Id" style="display:none;" />
            <input asp-for="@Model.BondId" value="@Model.BondId" style="display:none;" />
            <div class="form-group">
                <div class="col-sm-12 d-flex">
                    <button type="submit" class="btn btn-success mx-auto mx-md-0 text-white">
                        Confirm
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>