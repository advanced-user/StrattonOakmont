@page "{id}"
@model StrattonOakmont.Pages.Security.EditModel


@{
    ViewData["Title"] = "Edit";
}

<form method="post" class="mt-3">
   
    <input type="hidden" asp-for="Security.Id" />

   
    <div class="row justify-content-center m-3">
        <div class="col col-lg-8">
            <div class="card cardBoxShadow">
                <div class="card-header cardHeaderStyle text-center">
                    <!--Добавляем поле редактирования имени-->
                    <div class="form-group row">
                        <label asp-for="Security.Price" class="col col-lg-4 col-form-label text-right">Edit Price:</label>
                        <div class="col col-lg-6">
                            <input asp-for="Security.Price" class="form-control" placeholder="@Model.Security.Price" />
                            <!--Добавляем сообщение валидации формы-->
                            <span asp-validation-for="Security.Price" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="card-body cardBodyStyle text-center">
                    <div class="row">
                        <div class="col col-lg-9">
                            <h4 class="cardTextLeftFloating">Employee ID: @Model.Security.Id</h4><hr />

                            <!--Добавляем поле редактирования e-mail-->
                            <div class="form-group row">
                                <label asp-for="Security.PerSent" class="col col-lg-4 col-form-label text-right">Edit PerSent:</label>
                                <div class="col-12 col-lg-6">
                                    <input asp-for="Security.PerSent" class="form-control mr-2" placeholder="@Model.Security.PerSent" />
                                    <!--Добавляем сообщение валидации формы-->
                                    <span asp-validation-for="Security.PerSent" class="text-danger"></span>
                                </div>
                            </div>
                            <hr />


                            <!--Добавляем поле редактирования департамента-->
                            <div class="form-group row">
                                <label asp-for="Security.CompanySec" class="col col-lg-4 col-form-label text-right">Edit Company:</label>
                                <div class="col-12 col-lg-6">
                                    <!--Создаём выпадающий список с департаментами-->
                                    <!--Необходимо подключить класс локально или глобально-->
                                    <select asp-for="Security.CompanySec" class="custom-select mr-2" asp-items="Html.GetEnumSelectList<Company>()">
                                        <!--Добавляем начальный элемент выпадающего списка-->
                                        <option value="">Please Select</option>
                                    </select>
                                    <span asp-validation-for="Security.CompanySec" class="text-danger"></span>
                                </div>
                            </div>


                            <hr />
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="card-footer text-center" style="background-color: rgba(0, 0, 0, 0.25);">
                                <button type="submit" class="btn btn-success buttonShadow">Update</button>
                                <a asp-page="index" class="btn btn-danger buttonShadow">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>