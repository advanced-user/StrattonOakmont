@page
@model StrattonOakmont.Pages.Purchase.PurchaseModel
@{
}

<div class="card">
    <h2 style="text-align:center; margin:10px">Купить акции компании @Model.Company.Name</h2><br />

    <div class="card-body" style="margin-top: 100px;">
        <form class="form-horizontal form-material mx-2" method="post">
            <input asp-for="@Model.Company.Id" value="@Model.Company.Id" style="display:none" />
            <input asp-for="@Model.PriceСhange.Id" value="@Model.PriceСhange.Id" style="display:none" />

            <h3 style="text-align:center; margin:10px">Доступно @Model.PriceСhange.Amount акций</h3><br />
            <h3 style="text-align:center; margin:10px">Цена: @Model.PriceСhange.Price</h3><br />

            <div class="form-group">
                <label asp-for="@Model.Amount" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Amount" type="number" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 d-flex">
                    <button type="submit" class="btn btn-success mx-auto mx-md-0 text-white">
                        Buy
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>