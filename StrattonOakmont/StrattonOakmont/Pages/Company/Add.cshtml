@page
@model StrattonOakmont.Pages.Company.AddModel
@{
    ViewData["Title"] = "AddCompany";
}

<div class="card">
    <h2 style="text-align:center; margin:10px">Add new company</h2><br />

    <div class="card-body">
        <form class="form-horizontal form-material mx-2" method="post">
            <div class="form-group">
                <label asp-for="@Model.Company.Name" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Company.Name" type="text" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Company.Desc" class="col-md-12"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Company.Desc" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Company.Сapitalization" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Company.Сapitalization" type="text" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Company.IMG" class="col-md-12 mb-0"></label>
                <div class="col-md-12">
                    <input asp-for="@Model.Company.IMG" type="text" class="form-control ps-0 form-control-line">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 d-flex">
                    <button type="submit" class="btn btn-success mx-auto mx-md-0 text-white">
                        Add
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
